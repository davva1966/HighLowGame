<jsp:root xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:fn="http://java.sun.com/jsp/jstl/functions" xmlns:spring="http://www.springframework.org/tags" xmlns:form="http://www.springframework.org/tags/form" xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0">
	<jsp:output omit-xml-declaration="yes" />

	<jsp:directive.attribute name="text" type="java.lang.String" required="true" rtexprvalue="true" description="The string to display" />
	<jsp:directive.attribute name="additionalText" type="java.lang.String" required="false" rtexprvalue="true" description="The string to display" />
	<jsp:directive.attribute name="render" type="java.lang.Boolean" required="false" rtexprvalue="true" description="Indicate if the contents of this tag and all enclosed tags should be rendered (default 'true')" />

	<c:if test="${empty render or render}">
		<div style="margin-bottom: 4px">
			<span class="subheader">${text}:</span>
			<c:if test="${not empty additionalText}">
				<c:out value="${additionalText}" escapeXml="false" />
			</c:if>
		</div>
	</c:if>

</jsp:root>